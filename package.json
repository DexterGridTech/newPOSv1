{
  "name": "impos2new",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@3.6.4",
  "description": "impos2 - Enterprise POS System with Layered Architecture",
  "workspaces": [
    "0-mock-server/*",
    "0-mock-server/kernel-server/web",
    "1-kernel/base",
    "1-kernel/cores/*",
    "1-kernel/modules/*",
    "1-kernel/workspaces/*",
    "2-ui/cores/*",
    "2-ui/modules/*",
    "2-ui/integrates/*",
    "3-adapter/*",
    "3-adapter/android/*",
    "4-assembly/*",
    "4-assembly/android/*"
  ],
  "scripts": {
    "setup": "corepack yarn install",
    "build:clean": "turbo run build --force",
    "build": "turbo run build",
    "build-for-product": "turbo run build-for-product",
    "build-for-product:clean": "turbo run build-for-product --force",
    "check-env": "node scripts/check-env.cjs",
    "type-check": "turbo run type-check",
    "kill-port": "node scripts/kill-port.js",
    "android:port-forward": "node scripts/setup-android-port-forwarding.js",
    "android:port-list": "node scripts/setup-android-port-forwarding.js --list",
    "android:port-clear": "node scripts/setup-android-port-forwarding.js --clear",
    "create-module": "node scripts/create-module-from-template.cjs",
    "-------": "---------------------------------------",
    "A:kernel-server": "corepack yarn workspace @impos2/kernel-server dev",
    "B:master-ws-server": "corepack yarn workspace @impos2/master-ws-server dev",
    "---------": "---------------------------------------",
    "kernel-core-base": "corepack yarn workspace @impos2/kernel-core-base dev",
    "kernel-core-interconnection": "corepack yarn workspace @impos2/kernel-core-interconnection dev",
    "----------": "----------------------------------------",
    "ui:module-device-activate": "yarn workspace @impos2/ui-module-device-activate web",
    "ui:module-user-login": "corepack yarn workspace @impos2/ui-module-user-login web",
    "ui:module-system-admin": "corepack yarn workspace @impos2/ui-module-system-admin web",
    "ui:integrate-desktop-2": "corepack yarn workspace @impos2/integrate-desktop-2 web",
    "--------": "---------------------------------------",
    "adapter:impos2-adapter-v1:start": "corepack yarn workspace @impos2/adapter-impos2-adapterv1 start:clean",
    "-----------": "---------------------------------------",
    "assembly:impos2-desktop-v1:start": "corepack yarn workspace @impos2/assembly-impos2-desktopv1 start:clean",
    "------------": "---------------------------------------",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "inquirer": "^8.2.6",
    "turbo": "latest",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "@reduxjs/toolkit": "^2.11.2",
    "redux": "^5.0.1",
    "redux-observable": "^3.0.0-rc.3",
    "rxjs": "^7.8.2",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.6",
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2",
    "@types/node": "^25.0.9",
    "node-localstorage": "^3.0.5",
    "react": "18.3.1",
    "react-native": "0.76.6",
    "react-native-safe-area-context": "~4.12.0",
    "react-native-device-info": "^14.0.1",
    "@types/react": "~18.3.12",
    "jsc-android": "^250231.0.0",
    "better-sqlite3": "^12.6.2",
    "express": "^5.2.1",
    "cors": "^2.8.5",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "monaco-editor": "^0.52.2"
  }
}
